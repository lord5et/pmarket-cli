{
  "name": "pmarket-cli",
  "version": "0.9.1",
  "description": "CLI tool to trade on Polymarket",
  "license": "MIT",
  "author": {
    "name": "Arkadiusz Gotfryd",
    "email": "arekgotfryd@g.pl"
  },
  "keywords": [
    "cli",
    "npmtool",
    "polymarket"
  ],
  "repository": "https://github.com/arekgotfryd/pmarket-cli",
  "homepage": "https://github.com/arekgotfryd/pmarket-cli/blob/master/README.md",
  "type": "module",
  "main": "dist/main.js",
  "bin": {
    "pmarket-cli": "./dist/main.js"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/main.js",
    "lint": "eslint src/**/*.ts --fix",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:cov": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "postinstall": "node ./scripts/create-config.js"
  },
  "dependencies": {
    "@polymarket/clob-client": "^5.2.1",
    "axios": "^1.7.0",
    "better-sqlite3": "^11.7.0",
    "commander": "^12.0.0",
    "dotenv": "^17.2.3",
    "ethers": "^5.7.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0"
  }
}
